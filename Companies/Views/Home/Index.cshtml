@model IEnumerable<Companies.Models.Company>

@{
    ViewData["Title"] = "Firmenübersicht";
}

<h1>Firmenübersicht</h1>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Firmen-Nr.</th>
                <th scope="col">Firmenname</th>
                <th scope="col">Branche</th>
                <th scope="col">Anzahl Mitarbeiter</th>
                <th scope="col">Stadt</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0) {
                @foreach (var company in Model) {
                    <tr>
                        <td>@company.Id</td>
                        <td>@company.Title</td>
                        <td>@company.Branch</td>
                        <td>@company.AmountEmployees</td>
                        <td>@company.Town</td>
                    </tr>
                }
            } else {
                <tr>
                    <td>Keine Firmen gefunden</td>
                </tr>
            }
        </tbody>
    </table>
</div>