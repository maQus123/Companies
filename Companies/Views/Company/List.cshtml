@model IEnumerable<Companies.Models.Company>

@{
    ViewData["Title"] = "Firmenübersicht";
}

<br />
<h1>@ViewData["Title"]</h1>
<br />
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Firmen-Nr.</th>
                <th scope="col">Firmenname</th>
                <th scope="col">Branche</th>
                <th scope="col">Anzahl Mitarbeiter</th>
                <th scope="col">Stadt</th>
                <th scope="col">Mutterfirma</th>
                <th scope="col">Ebene</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0) {
                @foreach (var company in Model) {
                    <tr class="clickable-row" data-href="/edit/@company.Id">
                        <td>@company.Id</td>
                        <td>@company.Title</td>
                        <td>@company.Branch.DisplayName()</td>
                        <td>@company.AmountEmployees</td>
                        <td>@company.City</td>
                        @if (null == company.ParentCompany) {
                            <td></td>
                        } else {
                            <td>@company.ParentCompany.Title</td>
                        }
                        <td>@company.HierarchicalLevel</td>
                    </tr>
                }
            } else {
                <tr>
                    <td colspan="7">Keine Firmen gefunden</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a class="btn btn-primary" asp-route="createCompany">Neue Firma</a>